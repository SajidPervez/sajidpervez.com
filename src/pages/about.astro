---
import BaseLayout from '../layouts/BaseLayout.astro';
import Prose from '../components/Prose.astro';

import { getCollection } from 'astro:content';

// Fetch the content from the markdown file
const aboutContent = await getCollection('authors', ({ slug }) => slug === 'about');
const pageTitle = Astro.props;


if (!aboutContent.length) {
  throw new Error("No content found for 'about'.");
}

// Extract the necessary data from the content
const { data, render } = aboutContent[0];
const coverImages = data.cover || '/src/assets/Sajid.jpg'; // Assuming cover contains the image path
//const pageTitle = data.title || 'About Me';

// Render the markdown content
const { Content } = await render();

// Function to get a random image
function getRandomImage(images) {
  const randomIndex = Math.floor(Math.random() * images.length);
  return images[randomIndex];
}

// Get a random image from the array
const imagePath = getRandomImage(coverImages);

//console.log('imagePath:', imagePath);
---

<BaseLayout pageTitle={pageTitle}>
  <section class="container mx-auto px-4 py-4">
    <div class="flex flex-col md:flex-row items-center">
      <!-- Column 2: Image -->
      <div class="w-full md:w-1/3 flex justify-center md:justify-end mb-6 md:mb-0 order-1 md:order-2">
        <img src={imagePath.src} alt={data.altText} class="rounded-full w-full md:w-auto h-auto object-cover" />
      </div>
      <!-- Column 1: Text -->
      <div class="w-full md:w-2/3 text-center md:text-left order-2 md:order-1">
        <span><h3 class="text-2xl font-light mb-2 from-neutral-400">About</h3></span>
        <h1 class="text-4xl md:text-8xl font-bold mb-2">{data.title}</h1>
        <span><h2 class="text-xl md:text-3xl font-extrabold mb-1">Application security, security architecture, coding (when required)!</h2></span>
        <Prose> 
          <Content />
        </Prose>
      </div>
    </div>
  </section>
</BaseLayout>

