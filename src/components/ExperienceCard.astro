---
const { title, organization, startDate, endDate, period, description, Content } = Astro.props;
---

<div class="experience-card">
  <!-- Card Content -->
  <div class="p-4 bg-white rounded-b-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-2">{title}</h2>
    <h3 class="text-lg font-semibold text-gray-600 mb-1">{organization}</h3>
    <p class="text-sm text-gray-500 mb-4">{period}</p>
    <p class="text-sm text-gray-600">{description}</p>
    <div class="mt-4">
      <Content />
    </div>
  </div>
</div>

