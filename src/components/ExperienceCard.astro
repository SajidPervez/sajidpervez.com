---
const { experience } = Astro.props;
const { name, role, period, description, cover, Content } = experience.data;
---

<div class="experience-card flex items-start hover:shadow-lg transform transition duration-300 ease-in-out">
  <!-- Image on the left side -->
  <div class="experience-image w-24 h-24 rounded-md overflow-hidden">
    <img src={cover.src} alt={cover.alt} class="w-full h-full object-cover">
  </div>

  <!-- Card Content -->
  <div class="p-4 bg-white rounded-b-lg shadow-md w-full">
    <h2 class="text-2xl font-bold text-gray-800 mb-2">{role}</h2>
    <h3 class="text-lg font-semibold text-gray-600 mb-1">{name}</h3>
    <p class="text-sm text-gray-500 mb-4">{period}</p>
    <p class="text-sm text-gray-600">{description}</p>
    {Content && <Content />}
  </div>
</div>
