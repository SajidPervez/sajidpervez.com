---
import BaseLayout from '../layouts/BaseLayout.astro';

import { getCollection } from 'astro:content';

// Fetch the content from the markdown file
const aboutContent = await getCollection('authors', ({ slug }) => slug === 'about');
const pageTitle = Astro.props;


if (!aboutContent.length) {
  throw new Error("No content found for 'about'.");
}

// Extract the necessary data from the content
const { data, render } = aboutContent[0];
const coverImages = data.cover || '/src/assets/Sajid.jpg'; // Assuming cover contains the image path
//const pageTitle = data.title || 'About Me';

// Render the markdown content
const { Content } = await render();

// Function to get a random image
function getRandomImage(images) {
  const randomIndex = Math.floor(Math.random() * images.length);
  return images[randomIndex];
}

// Get a random image from the array
const imagePath = getRandomImage(coverImages);

console.log('imagePath:', imagePath);
---

<BaseLayout pageTitle={pageTitle}>
  <section class="container mx-auto px-6 py-16">
    <div class="flex flex-col md:flex-row items-center">
      <!-- Column 1: Text -->
      <div class="md:w-2/3">
        <span><h3 class="text-2xl font-bold mb-2">About</h3></span>
        <h1 class="text-8xl font-bold mb-2">{data.title}</h1>
        <span><h2 class="text-3xl font-extrabold mb-6">Application security, security architecture, coding, writing, plyaing badminton & family.</h2></span>
        <Content />
      </div>
      <!-- Column 2: Image -->
      <div class="md:w-1/3 flex justify-center md:justify-end mt-6 md:mt-0">
        <img src={imagePath.src} alt={data.altText} class="rounded-full w-64 h-64 object-cover sajid" />
      </div>
    </div>
  </section>
</BaseLayout>
